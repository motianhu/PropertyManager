<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/property_color_common_home_bg"
    android:orientation="vertical" >

    <include layout="@layout/property_common_header" />

    <include
        android:id="@+id/ywtype"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        layout="@layout/property_common_text_value" />

    <include
        android:id="@+id/housetype"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        layout="@layout/property_common_text_value" />

    <include
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        layout="@layout/property_common_text_value" />

    <include
        android:id="@+id/peitaomiaoshu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        layout="@layout/property_common_text_value" />

    <include
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        layout="@layout/property_common_text_value" />

    <include
        android:id="@+id/fangyuan_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/property_common_paishezhaoping_container_height"
        android:layout_marginTop="1dp"
        layout="@layout/property_common_display_picture" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="@color/property_commont_color_select_type_bg"
        android:orientation="vertical"
        android:weightSum="2" >

        <include
            android:id="@+id/lianxiren"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            layout="@layout/name_value" />

        <include
            android:id="@+id/dianhua"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            layout="@layout/name_value" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/property_commont_color_select_type_bg"
        android:orientation="vertical" >

        <include
            android:id="@+id/fabushijian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/name_value" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/property_commont_color_select_type_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/property_common_call_contact_phone" />
    </LinearLayout>

</LinearLayout>