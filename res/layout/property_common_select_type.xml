<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_type_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/property_common_select_type_height"
    android:layout_marginTop="1dp"
    android:background="@color/property_commont_color_select_type_bg" >

    <TextView
        android:id="@+id/select_type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/property_color_common_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/property_common_select_type_margin_right" >

        <TextView
            android:id="@+id/select_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/property_color_common_title" />

        <TextView
            android:id="@+id/select_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/property_common_select_type_arrow"
            android:textColor="@color/property_color_common_title" />
    </LinearLayout>

</RelativeLayout>