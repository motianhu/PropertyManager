<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/wuyebaoxiu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sub_func_height"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baoxiu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/baoxiu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wuyetongzhi"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sub_func_height"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baoxiu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/notify" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ershouwupin"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sub_func_height"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baoxiu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/wupin" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/tousujianyi"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sub_func_height"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baoxiu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/tousu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fangwuzulin"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sub_func_height"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baoxiu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/chuzu" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>