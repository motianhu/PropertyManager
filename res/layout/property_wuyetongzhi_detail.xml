<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/property_commont_color_select_type_bg"
    android:orientation="vertical" >

    <include layout="@layout/property_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/property_color_common_home_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/property_color_common_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notify_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/property_color_common_wenzi_qianse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="1dp"
            android:id="@+id/notify_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/property_color_common_title"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>