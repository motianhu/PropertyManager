<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_wuyebaoxi_item_time"
                android:textColor="@color/property_color_common_title" />

            <TextView
                android:id="@+id/baoxiudan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/property_color_common_title" />
        </LinearLayout>

        <TextView
            android:id="@+id/baoxiudan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/property_color_common_title" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_wuyebaoxi_item_name"
                android:textColor="@color/property_color_common_title" />

            <TextView
                android:id="@+id/baoxiudan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/property_color_common_title" />
        </LinearLayout>

        <TextView
            android:id="@+id/baoxiudan_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/baoxiudan_item_status"
            android:textColor="@color/property_color_common_title" />
    </RelativeLayout>

</RelativeLayout>